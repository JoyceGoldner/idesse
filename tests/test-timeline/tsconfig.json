{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitThis": true,
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise",
      "es2015.iterable"
    ],
    "types": [
      "chai",
      "mocha"
    ]
  },
  "include": [
    "src/*"
  ]
}