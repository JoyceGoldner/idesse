{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "watch",
            "command": "./node_modules/.bin/tsc",
            "windows": {
                "command": ".\\node_modules\\.bin\\tsc.cmd"
            },
            "args": [
                "--build",
                "--verbose",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}