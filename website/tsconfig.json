{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./src-umd",
        "declarationDir": "./types",
        "composite": true,
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}